<?xml version="1.0" encoding="utf-8"?>
<!--
    themes.xml
    This file defines the visual theme for the application, including colors,
    typography, and Material Design styling. Themes allow consistent UI
    appearance across all activities and components.
-->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme:
        - Inherits from Material3 DayNight theme without an ActionBar.
        - Responsible for overall look & feel of the app.
        - Additional theme customizations (colors, shapes, typography)
          can be added inside this style.
    -->
    <style name="Base.Theme.TripPlanningApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Example: override primary color -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!--
        Final app theme:
        Extends the base theme.
        This is the theme actually applied to the application in AndroidManifest.xml.
    -->
    <style name="Theme.TripPlanningApp" parent="Base.Theme.TripPlanningApp" />

</resources>
