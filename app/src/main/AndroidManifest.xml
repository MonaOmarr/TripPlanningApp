<?xml version="1.0" encoding="utf-8"?>
<!--
    AndroidManifest.xml
    This file defines the essential information about the application:
    - Package name
    - Activities (screens)
    - App icon, theme, and settings
    - Launch activity (entry point)
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tripplanner">

    <!--
        <application>
        Contains global settings for the entire app, including:
        - App icon + round icon
        - Display name
        - Theme
        - RTL support
        - Backup behavior
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripPlanningApp">

        <!--
            EditTaskActivity:
            Screen for editing an existing task.
            Not exported (cannot be launched by other apps).
        -->
        <activity
            android:name=".EditTaskActivity"
            android:exported="false" />

        <!--
            AddTaskActivity:
            Screen for adding a brand new task.
            Not exported (internal use only).
        -->
        <activity
            android:name=".AddTaskActivity"
            android:exported="false" />

        <!--
            MainActivity:
            The launcher activity (entry point).
            - Marked exported="true" because the launcher MUST be externally visible.
            - Contains MAIN action and LAUNCHER category.
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true">

            <!-- Defines this activity as the starting point of the app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>
